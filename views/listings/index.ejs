<% layout('/layouts/boilerplate') %>
<% title = 'Explore' %>

<style>
    /* Home page full background (login wala same image) */
    body {
        background: linear-gradient(rgba(44, 62, 80, 0.8), rgba(44, 62, 80, 0.6)),
                    url('https://images.unsplash.com/photo-1488646953014-85cb44e25828?auto=format&fit=crop&w=1470&q=80');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .container {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 40px; /* Thoda zyada padding for better spacing */
        margin: 40px auto;
        max-width: 1300px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.3);
    }

    /* Heading clean */
    .page-heading {
        text-align: center;
        font-size: 2.8rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 50px;
    }

    .listings-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 40px; /* Cards ke beech zyada space */
    }

    .listing-card {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        transition: transform 0.3s;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .listing-card:hover {
        transform: translateY(-10px);
    }

    .listing-card img {
        height: 210px;
        object-fit: cover;
        width: 100%;
    }

    .listing-card .card-body {
        padding: 25px 30px; /* Baju se zyada padding – text door rahega edges se */
        background: white;
        flex-grow: 1;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        flex-direction: column;
    }

    .listing-card b {
        font-size: 1.4rem;
        color: #2c3e50;
        display: block;
        margin-bottom: 8px;
    }

    .listing-card .price {
        font-size: 1.2rem;
        font-weight: 600;
        color: #fe424d;
    }
</style>

<div class="container">
    <h1 class="page-heading">Explore Amazing Trips</h1>

    <div class="listings-grid">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="text-decoration-none">
                <div class="card listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                    <div class="card-body">
                        <b><%= listing.title %></b>
                        <span class="price">₹<%= listing.price.toLocaleString("en-IN") %> / night</span>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</div>